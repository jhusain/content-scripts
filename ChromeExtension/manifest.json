{
  "manifest_version": 2,

  "name": "Voice Search",
  "description": "An extension that allows users to start a google voice search from any page with a single click.",
  "version": "1.0",
  "web_accessible_resources": ["logo.svg"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["icon_content.js"]
    },
    {
      "matches": ["*://www.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab", "<all_urls>"]
}
